{
  "name": "lusdt-bridge-platform",
  "version": "1.0.0",
  "description": "LUSDT Cross-chain Bridge Platform - Solana Lunes Stablecoin Bridge",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm --filter lusdt-app dev\" \"pnpm --filter lusdt-bridge-service dev\"",
    "dev:app": "pnpm --filter lusdt-app dev",
    "dev:bridge": "pnpm --filter lusdt-bridge-service dev",
    "build": "pnpm -r build",
    "build:app": "pnpm --filter lusdt-app build",
    "build:bridge": "pnpm --filter lusdt-bridge-service build",
    "test": "pnpm -r test",
    "test:app": "pnpm --filter lusdt-app test",
    "test:bridge": "pnpm --filter lusdt-bridge-service test",
    "lint": "pnpm -r lint",
    "clean": "rm -rf node_modules lusdt-app/node_modules bridge-service/node_modules lusdt-app/dist bridge-service/dist",
    "install:all": "pnpm install"
  },
  "workspaces": [
    "lusdt-app",
    "bridge-service"
  ],
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bigint-buffer",
      "bufferutil",
      "esbuild",
      "protobufjs",
      "utf-8-validate"
    ]
  },
  "keywords": [
    "lusdt",
    "stablecoin",
    "cross-chain",
    "bridge",
    "solana",
    "lunes",
    "blockchain",
    "defi"
  ],
  "author": "LUSDT Team",
  "license": "MIT"
}