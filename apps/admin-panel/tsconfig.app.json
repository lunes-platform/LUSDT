{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@lusdt/shared-components": ["../../packages/shared-components/src"],
      "@lusdt/blockchain-services": ["../../packages/blockchain-services/src"],
      "@lusdt/shared-utils": ["../../packages/shared-utils/src"]
    }
  },
  "include": [
    "src",
    "src/contracts/**/*.json"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/tests/**",
    "src/components/admin/UsdtManagementSimple.tsx"
  ]
}
