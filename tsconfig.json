{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@lusdt/shared-components": ["packages/shared-components/src"],
      "@lusdt/shared-components/*": ["packages/shared-components/src/*"],
      "@lusdt/blockchain-services": ["packages/blockchain-services/src"],
      "@lusdt/blockchain-services/*": ["packages/blockchain-services/src/*"],
      "@lusdt/shared-utils": ["packages/shared-utils/src"],
      "@lusdt/shared-utils/*": ["packages/shared-utils/src/*"],
      "@lusdt/config": ["packages/config/src"],
      "@lusdt/config/*": ["packages/config/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    { "path": "./packages/config" },
    { "path": "./packages/shared-utils" },
    { "path": "./packages/blockchain-services" },
    { "path": "./packages/shared-components" },
    { "path": "./apps/admin-panel" },
    { "path": "./apps/user-interface" }
  ]
}