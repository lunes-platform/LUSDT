{
  "name": "lusdt-bridge-service",
  "version": "1.0.0",
  "description": "Bridge service for LUSDT <-> USDT cross-chain transactions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t lusdt-bridge .",
    "docker:run": "docker-compose up -d"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.990.0",
    "@polkadot/api": "^12.0.0",
    "@polkadot/api-contract": "^12.0.0",
    "@polkadot/keyring": "^12.0.0",
    "@polkadot/util": "^12.0.0",
    "@polkadot/util-crypto": "^12.0.0",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.87.6",
    "@sqds/multisig": "^2.1.4",
    "bs58": "^5.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.3",
    "pg": "^8.11.3",
    "tweetnacl": "^1.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.20",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "blockchain",
    "bridge",
    "solana",
    "lunes",
    "usdt",
    "lusdt",
    "cross-chain",
    "defi"
  ],
  "author": "Lunes Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
