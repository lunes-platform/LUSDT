{
  "name": "lusdt-bridge-service",
  "version": "1.0.0",
  "description": "Bridge service for LUSDT <-> USDT cross-chain transactions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t lusdt-bridge .",
    "docker:run": "docker-compose up -d",
    "migrate": "npx prisma migrate deploy",
    "generate": "npx prisma generate"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "@polkadot/api": "^10.11.2",
    "@polkadot/api-contract": "^10.11.2",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.0",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^4.0.1",
    "discord.js": "^14.14.1",
    "nodemailer": "^6.9.7",
    "prom-client": "^15.0.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.16",
    "@types/pg": "^8.10.7",
    "@types/node-cron": "^3.0.11",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.7",
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "keywords": [
    "blockchain",
    "bridge",
    "solana",
    "lunes",
    "usdt",
    "lusdt",
    "cross-chain",
    "defi"
  ],
  "author": "Lunes Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
} 